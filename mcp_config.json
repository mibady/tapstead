{
  "server": {
    "port": 3000,
    "host": "localhost"
  },
  "docker": {
    "enabled": true,
    "container": {
      "image": "alpine/socat",
      "add_hosts": ["host.docker.internal:host-gateway"],
      "command": ["STDIO", "TCP:host.docker.internal:3000"]
    }
  },
  "tools": {
    "webFetch": {
      "enabled": true,
      "domains": ["api.stripe.com", "dashboard.stripe.com", "*.stripe.com"]
    },
    "webSearch": {
      "enabled": true
    }
  },
  "security": {
    "allowedOrigins": ["localhost:3000", "localhost:3001"],
    "headers": {
      "Content-Security-Policy": "default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://js.stripe.com; connect-src 'self' https://*.stripe.com https://api.stripe.com",
      "Strict-Transport-Security": "max-age=31536000; includeSubDomains"
    }
  }
}